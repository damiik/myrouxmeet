<!-- views/login.ejs -->
<!doctype html>
<html>
<head><% include ../partials/template/head.ejs %>
</head>
<body>
<% include ../partials/template/header.ejs %>
<section class="layout">
<div class="container">
	<h1><span class="fa fa-sign-in"></span> Logowanie</h1>
	<h5><div class="row-fluid">
		<label class="control-label col-sm-2 col-sm-offset-7" style="text-align:right;">Nie masz konta?</label>
		<a class="btn btn-warning col-sm-3" type="button" href="/login/signup"><i class="fa fa-user-plus"></i> Dodaj użytkownika</a> 
	</div></h5>
    <div class="col-sm-4 col-sm-offset-2">

	<div style='height:64px;'></div>
	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>	<div class="alert alert-danger"><%= message %></div> <% } %>

	<!-- LOGIN FORM -->
	<form action="/login" method="post">
		<div class="form-group">
			<label>Nazwa użytkownika</label>
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-user fa-fw"></i></span>
				<input type="text" class="form-control" name="username">
			</div>
		</div>
		<div class="form-group">
			<label>Hasło</label>
			<div class="input-group">
				<span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
				<input type="password" class="form-control" name="password">
			</div>
		</div>

		<button type="submit" class="btn btn-success btn-lg col-sm-4">Loguj</button>
	</form>

	<hr>

</div>

</div>
</section>
</body>
</html>
