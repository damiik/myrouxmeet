<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/template/head.ejs %>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
  <body class="<%= page %>">
    <% include ../partials/template/header.ejs %>
    <section class="layout">
    <div class="container">
      <h1>Edytuj dostęp do artykułu.</h1>
          <div class="controls controls-row" >
           <button style='width: 400px; margin-right: 120px;', class = "btn btn-large btn-success" , id = "btn_edit_users_access_save"><i class="fa fa-check"></i> Zapisz Ustawienia</button> 
            <div class="btn-group">
              <button class = "btn btn-large btn-info", id = "btn_edit_users_access_cancel"><i class="fa fa-times"></i> Anuluj i Wróć</button>
            </div>
          </div>
      <div style='height:16px;'></div>
      <div class="panel panel-primary">
        <!--<div class="panel-heading">Użytkownicy: <button type="button", class="article_edit_btns" style="margin-left:140px", id="btn_edit_users_access_save">Zapisz Ustawienia</button><button type="button", class="article_edit_btns" style="margin-left:20px", id="btn_edit_users_access_cancel">Anuluj i Wróć</button></div> -->


        <table class="table table-striped table-hover table-bordered table-condensed" id="usertable"
               data-toggle="table" data-click-to-select='true'>
        <thead>
        <tr class="info">
          <th style = "text-align: center;">Nazwa</th>
          <th style = "text-align: center;">Email</th>
          <th style = "text-align: center;">Telefon</th>
          <th style = "text-align: center;">Wiek</th>
          <th style = "text-align: center;">Id</th>
          <th> <input type="checkbox" id="cbx_R_select_all" style="float:left;"/><span style="display:inline;"> Widzi?</span></th>
          <th> <input type="checkbox" id="cbx_W_select_all" style="float:left;"/><span style="display:inline;"> Edytuje?</span></th>
        </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %>
            <% for (i=0; i<users.length; i++) { %>
              <tr>
                <td><%= users[i].name %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].phone %></td>
                <td><%= users[i].age %></td>
                <td><%= users[i].id %></td>
                <% if( article.read_list.indexOf( users[i].name ) > -1 || article.read_list.indexOf( 'all' ) > -1) { %>  <!-- article.read_list zmienione na article_read_list -->
                  <td style = "text-align:center;">
                    <input type="checkbox" value=<%= users[i].name %> name="cbx_user_read_access" checked="checked"/>
                  </td>
                <%} else {%>
                  <td style = "text-align:center;">
                    <input type="checkbox" value=<%= users[i].name %> name="cbx_user_read_access"/>
                  </td>
                <%}%>
                <% if( article.write_list.indexOf( users[i].name ) > -1 || article.write_list.indexOf( 'all' ) > -1) { %>  <!-- article.write_list zmienione na article_write_list -->
                  <td style = "text-align:center;">
                    <input type="checkbox" value=<%= users[i].name %> name="cbx_user_edit_access" checked="checked"/>
                  </td>
                <%} else {%>
                  <td style = "text-align:center;">
                    <input type="checkbox" value=<%= users[i].name %> name="cbx_user_edit_access"/>
                  </td>
                <%}%>               
              </tr>
            <% } %>
          <% } %>
        </tbody>
        <tfoot>
        <tr>
          <th name = "user_access_table_search"></th>
          <th name = "user_access_table_search"></th>
          <th name = "user_access_table_search"></th>
          <th name = "user_access_table_search"></th>
          <th name = "user_access_table_search"></th>
          <th></th>
          <th></th>
        </tr>
        </tfoot>
        </table>
      </div>
    </div>
  </section>

    <% include ../partials/template/jsdefaults.ejs %>
  </body>
</html>

